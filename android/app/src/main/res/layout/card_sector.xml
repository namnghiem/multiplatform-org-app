<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/card_hor_margin"
    android:layout_marginRight="@dimen/card_hor_margin"
    android:id="@+id/card_sector"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_marginTop="@dimen/card_vert_margin"
    android:layout_marginBottom="@dimen/card_vert_margin"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/sector_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sector_title"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:id="@+id/sector_manager_layout"
            android:layout_below="@id/sector_title"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:id="@+id/sector_manager"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/sector_title"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:id="@+id/sector_manager_role"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/sector_title"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/sector_manager_email"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:scaleType="centerCrop"
            android:alpha="0.8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/sector_manager_profile"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sector Details and Directory"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:id="@+id/sector_button_more"
            android:layout_below="@id/sector_manager_layout"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/sector_button_more"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/sector_is_manager"
            android:text="You are the sector manager. Edit your portfolio, meetings and more by touching 'Sector Details'"
            android:background="@color/colorPrimary"/>
    </RelativeLayout>


    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/sector_progress"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"

        android:layout_gravity="center_horizontal|center_vertical"/>
</androidx.cardview.widget.CardView>